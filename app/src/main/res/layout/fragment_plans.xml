<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/plans_purple"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/screen_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/plans"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/linearImag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:scaleType="centerCrop"
        android:src="@mipmap/linea_diagonal_plans"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="287dp"
            android:layout_height="90dp"
            android:padding="15dp"
            app:srcCompat="@mipmap/planes"
            tools:ignore="ContentDescription"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/linearImag2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/diagonalheadergray"
        tools:ignore="ContentDescription"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="24dp"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:text="@string/my_programs"
                android:textColor="@color/gray"
                android:textStyle="italic"/>

            <LinearLayout
                android:id="@+id/plan3k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_list_vertical"
                android:paddingEnd="@dimen/margin_list_horizontal"
                android:paddingStart="@dimen/margin_list_horizontal"
                android:paddingTop="@dimen/margin_list_vertical">

                <ImageView
                    android:id="@+id/img_plan3k"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/tres_k"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_item_list"
                    android:layout_marginEnd="@dimen/margin_item_list"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_plan3k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kilo3"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_size_subtitles"/>

                    <TextView
                        android:id="@+id/porcentaje_3k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_item_list"
                        android:text="% completado"
                        tools:ignore="HardcodedText"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <LinearLayout
                android:id="@+id/plan5k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_list_vertical"
                android:paddingEnd="@dimen/margin_list_horizontal"
                android:paddingStart="@dimen/margin_list_horizontal"
                android:paddingTop="@dimen/margin_list_vertical">

                <ImageView
                    android:id="@+id/img_plan5k"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/kilo5"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_item_list"
                    android:layout_marginEnd="@dimen/margin_item_list"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_plan5k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kilo5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_size_subtitles"/>

                    <TextView
                        android:id="@+id/porcentaje_5k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_marginTop="@dimen/margin_item_list"
                        android:text="% completado"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <LinearLayout
                android:id="@+id/plan10k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_list_vertical"
                android:paddingEnd="@dimen/margin_list_horizontal"
                android:paddingStart="@dimen/margin_list_horizontal"
                android:paddingTop="@dimen/margin_list_vertical">

                <ImageView
                    android:id="@+id/img_plan10k"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/kilo_10"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_item_list"
                    android:layout_marginEnd="@dimen/margin_item_list"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_plan10k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kilo10"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_size_subtitles"/>

                    <TextView
                        android:id="@+id/porcentaje_10k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_marginTop="@dimen/margin_item_list"
                        android:text="% completado"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>


            <LinearLayout
                android:id="@+id/plan5k_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"

                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_list_vertical"
                android:paddingEnd="@dimen/margin_list_horizontal"
                android:paddingStart="@dimen/margin_list_horizontal"
                android:paddingTop="@dimen/margin_list_vertical">

                <ImageView
                    android:id="@+id/img_plan10k_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/kilo5_plus"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_item_list"
                    android:layout_marginEnd="@dimen/margin_item_list"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_plan10k_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kilo5_plus"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_size_subtitles"/>

                    <TextView
                        android:id="@+id/porcentaje_5k_plus"
                        android:layout_width="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_item_list"
                        android:text="% completado"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <LinearLayout
                android:id="@+id/plan10k_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_list_vertical"
                android:paddingEnd="@dimen/margin_list_horizontal"
                android:paddingStart="@dimen/margin_list_horizontal"
                android:paddingTop="@dimen/margin_list_vertical">

                <ImageView
                    android:id="@+id/img_plan5k_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/kilo_10_plus"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_item_list"
                    android:layout_marginEnd="@dimen/margin_item_list"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_plan5k_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kilo10_plus"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_size_subtitles"/>

                    <TextView
                        android:id="@+id/porcentaje_10k_plus"
                        android:layout_width="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_item_list"
                        android:text="% completado"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_next"
        style="@style/Button.Orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:text="@string/buy_programs"
        android:textSize="24sp"/>
</LinearLayout>