<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal"
    android:id="@+id/uno"
    >

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="230dp"
        android:layout_height="265dp"
        android:background="@drawable/bg_levels_demo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            style="@style/YellowTitles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="2"
            android:maxLines="2"
            android:nestedScrollingEnabled="false"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="13dp"
            android:text="@string/demo"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:textStyle="italic|bold"/>

        <RelativeLayout
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/roottext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="5dp"
                android:text="@string/goals_titletrack"
                android:textColor="@color/gray"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roottext"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/especificacion_demo"
                android:textAlignment="textStart"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/finish_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundcorner_orange"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/button_run"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="italic|bold"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
