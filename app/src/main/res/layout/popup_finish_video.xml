<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill"
                android:background="@null"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="4dp"
                android:paddingStart="4dp">

    <TextView
        android:id="@+id/title_seg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/seguro"
        android:textColor="@color/white"
        android:textSize="30sp"
        />


    <TextView
        android:id="@+id/title_war"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_seg"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:minLines="2"
        android:paddingBottom="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="0dp"
        android:text="@string/video_war"
        android:textColor="@color/gray"
        android:textSize="18sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/title_war"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/continue_btn"
            style="@style/Button.Green.Video"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:minWidth="145dp"
            android:padding="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/continue_button"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/finish_btn"
            style="@style/Button.Red.Video"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:minWidth="160dp"
            android:padding="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:text="@string/finish"
            android:textSize="30sp"/>
    </LinearLayout>


</RelativeLayout>