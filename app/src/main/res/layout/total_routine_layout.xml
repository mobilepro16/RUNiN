<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical">

    <TableRow
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_blue"
            android:gravity="center"
            android:padding="3dip"
            android:text="@string/calories_total"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:background="@drawable/rounded_morado"
            android:gravity="center"
            android:padding="3dip"
            android:text="@string/esfuerzo"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_marginStart="25dp"
            android:background="@drawable/rounded_yellow"
            android:gravity="center"
            android:padding="3dip"
            android:text="@string/tiempo_total"
            android:textColor="@color/colorGradientDrawer1"/>
    </TableRow>

    <TableRow
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/cal_text"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:padding="3dip"
            android:text="0"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/effort_text"
            android:gravity="center"
            android:padding="3dip"
            android:text="FÃ¡cil"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/time_text"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:padding="3dip"
            android:text="0.0"
            tools:ignore="HardcodedText"/>
    </TableRow>
</TableLayout>