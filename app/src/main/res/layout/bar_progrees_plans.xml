<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/progress_plan"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="5dp">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginBottom="33dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/k_plans_full"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bar_ritmo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:text="@string/rate"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <ProgressBar
                android:id="@+id/ritmo_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:progress="50"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/primary_green"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar_cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:text="@string/calories"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <ProgressBar
                android:id="@+id/cal_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:progress="70"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/colorYellowRunin"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar_distancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:text="@string/progress_dintancia"
                android:textColor="@color/white"
                android:textSize="12sp"/>


            <ProgressBar
                android:id="@+id/distancia_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:progress="60"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/articlecolor"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:text="@string/time"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <ProgressBar
                android:id="@+id/time_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:progress="30"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/colorSpeed"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar_promedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:text="@string/tab_average"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <ProgressBar
                android:id="@+id/promedio_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:progress="55"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/colorCal"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>