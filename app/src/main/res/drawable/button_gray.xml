<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >

        <shape  android:shape="rectangle">
            <gradient android:startColor="#e0e0e0"  android:endColor="#e0e0e0" android:angle="270" />

            <stroke android:width="3px" android:color="#e0e0e0" />
        </shape>

    </item>

    <item android:state_pressed="false"  >
        <shape  android:shape="rectangle">
            <gradient android:startColor="#66000000" android:endColor="#66000000" android:angle="270" />

            <stroke android:width="3px" android:color="#66000000" />
        </shape>

    </item>

    <item  android:state_enabled="true" android:color="#66000000" >

        <shape  android:shape="rectangle">
            <gradient android:startColor="#66000000" android:endColor="#66000000" android:angle="270" />

            <stroke android:width="3px" android:color="#66000000" />
        </shape>


    </item>
</selector>