<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >

        <shape  android:shape="rectangle">
            <gradient android:startColor="@android:color/transparent"  android:endColor="@android:color/transparent" android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="3px" android:color="@color/colorYellowRunin" />
        </shape>

    </item>

    <item android:state_pressed="false"  >
        <shape  android:shape="rectangle">
            <gradient android:startColor="@android:color/transparent" android:endColor="@android:color/transparent" android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="3px" android:color="@color/colorYellowCream" />
        </shape>

    </item>

    <item  android:state_enabled="true" android:color="@color/colorYellowCream" >

        <shape  android:shape="rectangle">
            <gradient android:startColor="@android:color/transparent"  android:endColor="@android:color/transparent" android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="3px" android:color="@color/colorYellowCream" />
        </shape>


    </item>
</selector>